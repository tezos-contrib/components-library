{
  "name": "@tz-contrib/react-wallet-provider",
  "version": "1.0.0-alpha.4",
  "description": "Provider for tezos wallet for react apps",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "react",
    "tezos",
    "wallet",
    "beacon"
  ],
  "author": "Shubhendu Shekhar <shubhendu@shekhar.eu>",
  "repository": {
    "type": "git",
    "url": "https://github.com/tz-contrib/components-library.git",
    "directory": "packages/react-wallet-provider"
  },
  "license": "MIT",
  "main": "dist/react-wallet-provider.umd.js",
  "module": "dist/react-wallet-provider.es.js",
  "typings": "dist/index.d.ts",
  "directories": {
    "lib": "src",
    "test": "__tests__"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest --collectCoverage",
    "clean": "rimraf dist",
    "build": "yarn clean && rollup -c rollup.config.ts",
    "compile": "tsc --jsx react-jsx --declaration src/index.ts",
    "prepare": "yarn build"
  },
  "peerDependencies": {
    "@airgap/beacon-sdk": "^2.2.6",
    "@taquito/beacon-wallet": "^9.0.0",
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@airgap/beacon-sdk": "^2.2.6",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@taquito/beacon-wallet": "^9.0.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/react-hooks": "^5.1.2",
    "@types/jest": "^26.0.22",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "jest": "^26.6.3",
    "jest-environment-jsdom-sixteen": "^2.0.0",
    "react-dom": "^17.0.2",
    "react-test-renderer": "^17.0.2",
    "rollup": "^2.45.2",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^26.5.5"
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "lcov"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "testEnvironment": "jest-environment-jsdom-sixteen",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ]
  },
  "ts-jest": {
    "isolatedModules": false
  }
}
